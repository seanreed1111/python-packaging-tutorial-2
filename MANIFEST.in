include README.md
include requirements.txt
include pyproject.toml
include setup.py

# Include all Python source files
recursive-include sound *.py

# Include any Cython files if they exist
recursive-include sound *.pyx
recursive-include sound *.pxd

# Exclude compiled files and cache
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
global-exclude *.so
global-exclude *.c
global-exclude *.html 